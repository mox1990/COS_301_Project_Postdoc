<?xml version="1.0"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:complexType name="attainment">
        <xs:sequence>
            <xs:element name="expectedAttainment" 
                        type="xs:string"/>
            <xs:element name="actualAttainment"
                        type="xs:string"/>   
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="reference">
        <xs:sequence>
            <xs:element name="publicationName"
                        type="xs:string"/>            
            <xs:element name="publicationDate"
                        type="xs:date"/>
            <xs:element name="publicationPageLocation"
                        type="xs:string"/>
            <xs:element name="publicationMediumName"
                        type="xs:string"/>
            <xs:element name="publisher"
                        type="xs:string"/>              
            <xs:element name="publicationReferenceCode"
                        type="xs:string"/>  
            <xs:element name="publicationISBN"
                        type="xs:string"/>                        
        </xs:sequence>
    </xs:complexType>
    
    <xs:element name="ProgressReportContent"> 
        <xs:complexType>
            <xs:sequence>
                <xs:element name="projectAimsAttainment">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="aimAttainment" maxOccurs="unbounded" minOccurs="1" type="attainment"/>                          
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
                <xs:element name="projectOutcomesAttainment">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="outcomeAttainment" maxOccurs="unbounded" minOccurs="1" type="attainment"/>                          
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
                <xs:element name="researchOutput">
                    <xs:complexType>
                        <xs:sequence>
                           <xs:element name="journalPublications"
                                       type="reference"/>
                           <xs:element name="bookChapterPublications"
                                       type="reference"/>
                           <xs:element name="scientificPublicationsArticles"
                                       type="reference"/>
                           <xs:element name="technicalAnyReports"
                                       type="reference"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
                <xs:element name="selfEvaluation"
                            type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
</xs:schema>